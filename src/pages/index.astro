---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Experience from '../components/Experience.astro';
import SocialPill from '../components/SocialPill.astro';
import Skills from '../components/Skills.astro';
import RowExperience from '../components/RowExperience.astro';
import Projects from '../components/Projects.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';

import LinkedInIcon from '../icons/LinkedIn.astro';
import GitHubIcon from '../icons/GitHub.astro';
import EmailIcon from '../icons/Email.astro';
import Briefcase from '../icons/Briefcase.astro';

const LinkedVariable = 'https://www.linkedin.com/in/panxo/';

---

<Layout title="Francisco Muñoz - Desarrollador Fullstack" description="Portfolio de Francisco, un desarrollador Fullstack con experiencia en la creación de soluciones web robustas y escalables. Especializado en aprender nuevas tecnologías y mejorar constantemente sus habilidades.">
	<main>
		<!-- Section presentacion -->
		<SectionContainer class="relative px-3 pt-44 lg:h-screen overflow-hidden lg:pt-0 lg:flex lg:flex-col lg:justify-center">
			<h1 class="text-4xl lg:text-5xl font-bold text-white lg:flex lg:flex-row pb-1 tracking-tight gap-x-2">
				Hola,{''}
				<span class="text-cyan-500">soy Francisco</span>
				<a href={LinkedVariable} target="_blank" rel="noopener" class="lg:flex lg:justify-center lg:items-center md:mx-5"><Badge>Disponible para trabajar</Badge></a> 
			</h1>
			<p class="font-semibold inline-flex animate-background-shine  bg-[linear-gradient(110deg,#64748b,45%,#0f172a,55%,#64748b)] dark:bg-[linear-gradient(110deg,#b6eaff,45%,#065074,55%,#b6eaff)] bg-[length:250%_100%] bg-clip-text text-xl text-transparent">
				Desarrollador Full Stack
			</p>
			<h2 class="lg:text-xl mt-6 md:mt-10 text-wrap opacity-80">
			+1 Año de experiencia.<span class="text-emerald-200 font-medium">{' '}Ingeniero en Informática.{' '}Especializado en crear soluciones web robustas y escalables</span>. Me apasiona aprender nuevas tecnologías y mejorar mis habilidades constantemente.
			</h2>
			<nav class="flex gap-x-4 mt-6">
				<SocialPill href={LinkedVariable}>
					<LinkedInIcon class="size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/Panxoty">
					<GitHubIcon class="size-6"/>
					GitHub
				</SocialPill>
				<SocialPill>
					<EmailIcon class="size-6"/>
					Contacto
				</SocialPill>
			</nav>
			<!--Flecha experience -->
			<RowExperience/>
		</SectionContainer>
		<SectionContainer id="experiencia" class="pt-40 px-2">
			<h2 class="text-3xl font-bold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-8"/>
				Experiencia laboral
			</h2>
			<Experience/>
		</SectionContainer>
		<!-- Section skills -->
		<SectionContainer id="skills">
			<h2 class="text-3xl font-bold mb-4 px-3">Tecnologias y Herramientas</h2>
			<Skills/>
		</SectionContainer>
		<!-- Section projects -->
		 <SectionContainer id="proyectos">
			<h2 class="text-3xl font-bold mb- px-3">Proyectos</h2>
			<Projects/>
		</SectionContainer>
		<!--Section About -->
		<SectionContainer id="sobre-mi">
			<h2 class="text-3xl font-bold mb- px-3">Sobre mí</h2>
			<About/>
		</SectionContainer>
		<!-- Section Contacto -->
		<SectionContainer id="contacto">
			<h2 class="text-3xl font-bold mb- px-3">Contacto</h2>
			<Contact/>
		</SectionContainer>
	</main>
</Layout>

<style>
   @keyframes background-shine {
		0% {
			background-position: 0 0
		}

		to {
			background-position: -200% 0
		}
	}

	.animate-background-shine {
		animation: background-shine 2s linear infinite
	}
  </style>
