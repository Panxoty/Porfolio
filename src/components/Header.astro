---
import LinkedInIcon from "../icons/LinkedIn.astro"
import GitHubIcon from "../icons/GitHub.astro"
import Linked from "../icons/Lindek.astro"
const linkedIn = 'https://www.linkedin.com/in/panxo/'
const git = 'https://github.com/Panxoty'
---
<header class="backdrop-blur-md fixed w-full z-20 top-0 left-0">
    <nav class="w-full px-2 lg:max-w-[1114px] flex flex-wrap items-center justify-between mx-auto py-3">
        <!--Logo -->
        <a href="/" class="font-black uppercase text-xl py-3">
            <span class="text-cyan-600">{'{'}</span>
            panxodev
            <span class="text-cyan-600">{'}'}</span>
        </a>
        <!--Menu burger -->
        <div class="md:order-2">
            <!--Icons -->
            <ul class="hidden md:flex md:space-x-8 items-center">
                <li>
                    <a href={linkedIn} target="_blank" rel="noopener" class="hover:text-slate-400 transition-colors duration-300">
                        <Linked class="size-5"/>
                    </a>
                </li>
                <li>
                    <a href={git} target="_blank" rel="noopener" class="hover:text-slate-400 transition-colors duration-300">
                        <GitHubIcon class="size-5"/>
                    </a>
                </li>
            </ul>
            <div class="flex items-center">
                <button id="menu-toggle" class="p-2 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" type="button" aria-controls="navbar-default" aria-expanded="false">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 6h18M3 12h18m-7.5 6h7.5"></path>
                    </svg>
                    <svg id="menu-close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hidden">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
        <!--Menu -->
        <div id="navbar-default" class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1 transition-all duration-500">
            <ul class="flex flex-col gap-6 p-4 font-medium md:p-0 md:flex-row md:mt-0 md:border-0">
                <li class="text-center">
                    <a href="#experiencia" class="relative inline-block px-2 py-1 text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors duration-300 before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-0 before:bg-cyan-500 before:transition-all before:duration-500 hover:before:w-full">Experiencia</a>
                </li>
                <li class="text-center">
                    <a href="#proyectos" class="relative inline-block px-2 py-1 text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors duration-300 before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-0 before:bg-cyan-500 before:transition-all before:duration-500 hover:before:w-full">Proyectos</a>
                </li>
                <li class="text-center">
                    <a href="#sobre-mi" class="relative inline-block px-2 py-1 text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors duration-300 before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-0 before:bg-cyan-500 before:transition-all before:duration-500 hover:before:w-full">Sobre m√≠</a>
                </li>
                <li class="text-center">
                    <a href="#contacto" class="relative inline-block px-2 py-1 text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white transition-colors duration-300 before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-0 before:bg-cyan-500 before:transition-all before:duration-500 hover:before:w-full">Contacto</a>
                </li>
            </ul>
            <ul class="flex justify-center space-x-8 my-4 md:hidden">
                <li>
                    <a href={linkedIn} target="_blank" rel="noopener" class="hover:text-slate-400 transition-colors duration-300">
                        <Linked class="size-5"/>
                    </a>
                </li>
                <li>
                    <a href={git} target="_blank" rel="noopener" class="hover:text-slate-400 transition-colors duration-300">
                        <GitHubIcon class="size-5"/>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <script>
        const menuToggle = document.getElementById('menu-toggle');
        const menuClose = document.getElementById('menu-close');
        const navbar = document.getElementById('navbar-default');

        if (menuToggle) {
            menuToggle.addEventListener('click', () => {
                const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
                menuToggle.setAttribute('aria-expanded', String(!isExpanded));
                if (navbar) {
                    navbar.classList.toggle('hidden');
                }
                if (menuClose) {
                    menuClose.classList.toggle('hidden');
                }
            });
        }
    </script>
</header>
